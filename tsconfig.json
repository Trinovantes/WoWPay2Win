{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,

        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",

        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "baseUrl": ".",
        "paths": {
            // Need to match aliases in scripts/webpack.config.common
            "@static/*": ["./static/*"],
            "@common/*": ["./src/common/*"],
            "@cron/*": ["./src/cron/*"],
            "@web/*": ["./src/web/*"],

            "@views/*": ["src/web/views/*"],
            "@router/*": ["./src/web/router/*"],
            "@store/*": ["./src/web/store/*"],

            "@css/*": ["./src/web/assets/css/*"],
            "@img/*": ["./src/web/assets/img/*"],
            "@data/*": ["./src/web/assets/data/*"],
        },
    },
    "exclude": [
        "node_modules",
        "dist*",
    ],
    "include": [
        "**/*",
        ".eslintrc.js",
    ],
}
